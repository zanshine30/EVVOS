#!/bin/bash
# Diagnostic script to identify why dsnoop is hanging

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

log_info() { echo -e "${BLUE}ℹ${NC} $1"; }
log_success() { echo -e "${GREEN}✓${NC} $1"; }
log_error() { echo -e "${RED}✗${NC} $1"; }

echo ""
echo "════════════════════════════════════════════════════"
echo "  ALSA dsnoop Diagnostics"
echo "════════════════════════════════════════════════════"
echo ""

if [ "$EUID" -ne 0 ]; then 
    log_error "Run as root: sudo bash diagnose_dsnoop.sh"
    exit 1
fi

# Stop all services
log_info "Stopping services..."
systemctl stop evvos-picam-tcp 2>/dev/null || true
systemctl stop evvos-pico-voice 2>/dev/null || true
pkill -9 arecord 2>/dev/null || true
pkill -9 python3 2>/dev/null || true
sleep 2
log_success "Services stopped"
echo ""

# Check hardware device
log_info "Test 1: Direct hardware access (hw:seeed2micvoicec)"
if timeout 2 arecord -D hw:seeed2micvoicec -f S16_LE -r 48000 -c 2 /tmp/test_hw.wav 2>&1 | grep -q "Recording"; then
    SIZE=$(stat -c%s /tmp/test_hw.wav 2>/dev/null || echo "0")
    log_success "Hardware access works: ${SIZE} bytes"
else
    log_error "Hardware access FAILED"
    arecord -l | grep seeed
    exit 1
fi
echo ""

# Check plughw
log_info "Test 2: Plug layer (plughw:seeed2micvoicec)"
if timeout 2 arecord -D plughw:seeed2micvoicec -f S16_LE -r 48000 -c 2 /tmp/test_plughw.wav 2>&1 | grep -q "Recording"; then
    SIZE=$(stat -c%s /tmp/test_plughw.wav 2>/dev/null || echo "0")
    log_success "Plughw works: ${SIZE} bytes"
else
    log_error "Plughw FAILED"
fi
echo ""

# Check if dsnooper exists
log_info "Test 3: Check if dsnooper device exists"
if arecord -L | grep -q "dsnooper"; then
    log_success "dsnooper is in device list"
    arecord -L | grep -A 5 dsnooper
else
    log_error "dsnooper NOT in device list"
    echo ""
    log_info "Available ALSA devices:"
    arecord -L | grep -E "^[a-z]" | head -10
    exit 1
fi
echo ""

# Check ALSA config
log_info "Test 4: Check /etc/asound.conf"
if [ -f /etc/asound.conf ]; then
    log_success "/etc/asound.conf exists"
    echo ""
    echo "Content preview:"
    grep -E "pcm.dsnooper|ipc_key|slave" /etc/asound.conf | head -10
else
    log_error "/etc/asound.conf missing"
    exit 1
fi
echo ""

# Check IPC
log_info "Test 5: Check shared memory segments"
echo "Current IPC shared memory:"
ipcs -m
echo ""

# Try to open dsnooper
log_info "Test 6: Attempt to open dsnooper device"
echo "This will try to record for 2 seconds..."
echo ""

# Start arecord in background with output
arecord -D dsnooper -f S16_LE -r 48000 -c 2 -d 2 /tmp/test_dsnooper_diag.wav 2>&1 &
ARECORD_PID=$!

# Monitor for 3 seconds
for i in {1..6}; do
    sleep 0.5
    if ! ps -p $ARECORD_PID > /dev/null; then
        log_success "arecord completed normally"
        SIZE=$(stat -c%s /tmp/test_dsnooper_diag.wav 2>/dev/null || echo "0")
        echo "File size: ${SIZE} bytes"
        if [ "$SIZE" -gt 50000 ]; then
            log_success "✓✓✓ DSNOOPER WORKS!"
        else
            log_error "File too small"
        fi
        break
    fi
    
    if [ $i -eq 6 ]; then
        log_error "arecord hung - killing it"
        kill -9 $ARECORD_PID 2>/dev/null
        
        echo ""
        log_info "Checking what arecord was doing:"
        echo "Process info before kill:"
        ps aux | grep arecord | grep -v grep || echo "Process already dead"
        
        echo ""
        log_info "Checking kernel logs for ALSA errors:"
        dmesg | tail -20 | grep -i "alsa\|sound\|audio" || echo "No recent ALSA errors"
    fi
done

echo ""

# Check strace
log_info "Test 7: Trace system calls (detailed)"
echo "Running arecord with strace for 2 seconds..."
timeout 2 strace -e trace=open,openat,read,write,ioctl arecord -D dsnooper -f S16_LE -r 48000 -c 2 /tmp/test_strace.wav 2>&1 | tail -30
echo ""

# Summary
echo ""
echo "════════════════════════════════════════════════════"
echo "  Diagnostic Summary"
echo "════════════════════════════════════════════════════"
echo ""

echo "Hardware device (hw:seeed2micvoicec):"
ls -lh /tmp/test_hw.wav 2>/dev/null || echo "  FAILED"

echo ""
echo "Plugin device (plughw:seeed2micvoicec):"
ls -lh /tmp/test_plughw.wav 2>/dev/null || echo "  FAILED"

echo ""
echo "Shared device (dsnooper):"
ls -lh /tmp/test_dsnooper_diag.wav 2>/dev/null || echo "  FAILED"

echo ""
echo "If dsnooper hangs, this indicates:"
echo "  1. ALSA dsnoop plugin may not be installed"
echo "  2. Configuration syntax error in /etc/asound.conf"
echo "  3. Kernel driver incompatibility with dsnoop"
echo "  4. ReSpeaker hardware doesn't support dsnoop"
echo ""

log_info "Check detailed output above for specific errors"
echo ""
