#!/bin/bash
# Final shared audio deployment - dsnooper is confirmed working!

set -e

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

log_info() { echo -e "${BLUE}ℹ${NC} $1"; }
log_success() { echo -e "${GREEN}✓${NC} $1"; }
log_warning() { echo -e "${YELLOW}⚠${NC}  $1"; }
log_error() { echo -e "${RED}✗${NC} $1"; }

echo ""
echo -e "${GREEN}════════════════════════════════════════════════════${NC}"
echo -e "${GREEN}  Final Shared Audio Deployment${NC}"
echo -e "${GREEN}  dsnooper is confirmed working!${NC}"
echo -e "${GREEN}════════════════════════════════════════════════════${NC}"
echo ""

if [ "$EUID" -ne 0 ]; then 
    log_error "Run as root: sudo bash final_shared_audio_deployment.sh"
    exit 1
fi

# ============================================================================
# STEP 1: VERIFY DSNOOPER IS STILL WORKING
# ============================================================================

log_info "Step 1: Verifying dsnooper configuration..."
echo ""

if [ ! -f /etc/asound.conf ]; then
    log_error "/etc/asound.conf missing! Run diagnose_dsnoop.sh first"
    exit 1
fi

log_success "/etc/asound.conf exists"

# Quick test
log_info "Testing dsnooper device..."
timeout 3 arecord -D dsnooper -f S16_LE -r 48000 -c 2 /tmp/verify_dsnooper.wav 2>/dev/null &
sleep 2.5
pkill arecord 2>/dev/null || true
wait 2>/dev/null || true

SIZE=$(stat -c%s /tmp/verify_dsnooper.wav 2>/dev/null || echo "0")
if [ "$SIZE" -gt 100000 ]; then
    log_success "dsnooper verified working: ${SIZE} bytes"
else
    log_error "dsnooper test failed: ${SIZE} bytes"
    log_info "Run diagnose_dsnoop.sh again to recreate config"
    exit 1
fi

echo ""

# ============================================================================
# STEP 2: UPDATE CAMERA SERVICE
# ============================================================================

log_info "Step 2: Updating camera service to use dsnooper..."
echo ""

CAMERA_SCRIPT="/usr/local/bin/evvos-picam-tcp.py"

if [ ! -f "$CAMERA_SCRIPT" ]; then
    log_error "Camera script not found at $CAMERA_SCRIPT"
    exit 1
fi

# Backup
cp "$CAMERA_SCRIPT" "${CAMERA_SCRIPT}.backup.$(date +%s)"
log_success "Backed up camera script"

# Update to use dsnooper
sed -i 's/"plughw:seeed2micvoicec"/"dsnooper"/g' "$CAMERA_SCRIPT"
sed -i 's/"hw:seeed2micvoicec"/"dsnooper"/g' "$CAMERA_SCRIPT"

# Verify change
if grep -q '"dsnooper"' "$CAMERA_SCRIPT"; then
    log_success "Camera script updated to use dsnooper"
else
    log_error "Failed to update camera script"
    exit 1
fi

echo ""

# ============================================================================
# STEP 3: RESTART SERVICES
# ============================================================================

log_info "Step 3: Restarting services..."
echo ""

# Stop first
systemctl stop evvos-picam-tcp 2>/dev/null || true
systemctl stop evvos-pico-voice 2>/dev/null || true
sleep 2

# Start camera service
systemctl start evvos-picam-tcp
sleep 2

if systemctl is-active --quiet evvos-picam-tcp; then
    log_success "Camera service started"
else
    log_error "Camera service failed to start"
    log_info "Check logs: sudo journalctl -u evvos-picam-tcp -n 50"
    exit 1
fi

# Start voice service
if systemctl is-enabled --quiet evvos-pico-voice 2>/dev/null; then
    systemctl start evvos-pico-voice
    sleep 2
    
    if systemctl is-active --quiet evvos-pico-voice; then
        log_success "Voice service started"
    else
        log_warning "Voice service failed (check access key)"
        log_info "Non-critical - camera will still work"
    fi
else
    log_info "Voice service not installed (skipping)"
fi

echo ""

# ============================================================================
# STEP 4: TEST WITH BOTH SERVICES RUNNING
# ============================================================================

log_info "Step 4: Testing shared audio with both services running..."
echo ""

sleep 3  # Let services stabilize

log_info "Recording 3 seconds with both services active..."

# Start recording
timeout 4 arecord -D dsnooper -f S16_LE -r 48000 -c 2 /tmp/test_both_services.wav 2>/dev/null &
RECORD_PID=$!

# Wait and kill
sleep 3.5
kill $RECORD_PID 2>/dev/null || true
wait $RECORD_PID 2>/dev/null || true

# Check result
SIZE=$(stat -c%s /tmp/test_both_services.wav 2>/dev/null || echo "0")

if [ "$SIZE" -gt 200000 ]; then
    log_success "✓✓✓ SHARED AUDIO WORKING WITH BOTH SERVICES!"
    log_success "File size: ${SIZE} bytes"
    log_info "Play test: aplay /tmp/test_both_services.wav"
    FINAL_SUCCESS=true
else
    log_error "Test failed with both services: ${SIZE} bytes"
    log_warning "Shared audio may not be working properly"
    FINAL_SUCCESS=false
fi

echo ""

# ============================================================================
# STEP 5: STATUS CHECK
# ============================================================================

log_info "Step 5: System status..."
echo ""

echo "Services:"
echo "  Camera: $(systemctl is-active evvos-picam-tcp)"
if systemctl is-enabled --quiet evvos-pico-voice 2>/dev/null; then
    echo "  Voice:  $(systemctl is-active evvos-pico-voice)"
fi
echo ""

echo "Processes using audio:"
lsof /dev/snd/* 2>/dev/null | grep -v "COMMAND" | head -5 || echo "  None detected"
echo ""

echo "Recent camera service logs:"
journalctl -u evvos-picam-tcp -n 5 --no-pager 2>/dev/null | tail -5
echo ""

# ============================================================================
# SUMMARY
# ============================================================================

echo ""
echo -e "${GREEN}════════════════════════════════════════════════════${NC}"

if [ "$FINAL_SUCCESS" = true ]; then
    echo -e "${GREEN}  ✓✓✓ SHARED AUDIO DEPLOYMENT SUCCESSFUL!${NC}"
    echo -e "${GREEN}════════════════════════════════════════════════════${NC}"
    echo ""
    
    log_success "Configuration summary:"
    echo "  ✓ dsnooper working with no services"
    echo "  ✓ dsnooper working with both services"
    echo "  ✓ Camera service using dsnooper"
    echo "  ✓ Voice service running (if installed)"
    echo "  ✓ Both can access microphone simultaneously"
    echo ""
    
    log_info "Audio quality:"
    echo "  • Format: 16-bit PCM (S16_LE)"
    echo "  • Sample rate: 48kHz (ReSpeaker native)"
    echo "  • Channels: Stereo (2 channels)"
    echo "  • Quality: Identical to direct hardware access"
    echo ""
    
    log_info "Next steps:"
    echo "  1. Test from your mobile app"
    echo "  2. Start an incident recording"
    echo "  3. Try voice commands during recording (should work!)"
    echo "  4. Stop recording"
    echo "  5. Check audio file: ls -lh ~/recordings/"
    echo "  6. Audio size should be > 0 MB!"
    echo ""
    
    log_info "Monitor logs:"
    echo "  sudo journalctl -u evvos-picam-tcp -u evvos-pico-voice -f"
    echo ""
    
    log_success "You can now use voice commands DURING recording!"
    
else
    echo -e "${YELLOW}  ⚠ Shared Audio Partially Working${NC}"
    echo -e "${YELLOW}════════════════════════════════════════════════════${NC}"
    echo ""
    
    log_warning "dsnooper works alone but has issues with services running"
    echo ""
    log_info "Possible causes:"
    echo "  • Voice service using too much CPU"
    echo "  • PyAudio configuration needs adjustment"
    echo "  • Services need more time to initialize"
    echo ""
    log_info "Try testing from your app anyway - it might still work!"
    echo ""
    log_info "If audio is still 0.00 MB from app:"
    echo "  1. Check camera logs: sudo journalctl -u evvos-picam-tcp -n 100"
    echo "  2. Stop voice service temporarily: sudo systemctl stop evvos-pico-voice"
    echo "  3. Test recording from app"
    echo "  4. If it works, consider Plan B (pause voice during recording)"
    echo ""
fi

echo ""
log_info "Test files created:"
echo "  /tmp/verify_dsnooper.wav (verification test)"
echo "  /tmp/test_both_services.wav (final test with services)"
echo ""
echo "Play them: aplay /tmp/test_both_services.wav"
echo ""
